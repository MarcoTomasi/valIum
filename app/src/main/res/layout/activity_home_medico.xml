<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoStudio"
        android:layout_width="135dp"
        android:layout_height="116dp"
        android:layout_gravity="center"
        android:contentDescription="@string/logo_studio_medico"
        android:src="@drawable/logostudiomedico"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bottoneContatti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="@color/bluApplicazione"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHeight_percent="0.22"
        card_view:layout_constraintHorizontal_bias="0.29"
        card_view:layout_constraintStart_toEndOf="@+id/bottoneNuovaPrenotazione"
        card_view:layout_constraintTop_toBottomOf="@+id/bottoneLeMiePrenotazioni"
        card_view:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            android:src="@drawable/record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:text="@string/contatti"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:typeface="monospace" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottoneNuovaPrenotazione"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="@color/bluApplicazione"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="0dp"
        card_view:layout_constraintHeight_percent="0.22"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/bottoneLeMieRicette"
        card_view:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            android:src="@drawable/calendarperson" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:text="@string/nuovaPrenotazione"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:typeface="monospace" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottoneLeMieRicette"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="@color/bluApplicazione"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="0dp"
        card_view:layout_constraintHeight_percent="0.22"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/logoStudio"
        card_view:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            android:src="@drawable/record" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:text="@string/leMieRicette"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:typeface="monospace" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottoneLeMiePrenotazioni"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="@color/bluApplicazione"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHeight_percent="0.22"
        card_view:layout_constraintHorizontal_bias="0.307"
        card_view:layout_constraintStart_toEndOf="@+id/bottoneLeMieRicette"
        card_view:layout_constraintTop_toBottomOf="@+id/logoStudio"
        card_view:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            android:src="@drawable/calendar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:text="@string/leMiePrenotazioni"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:typeface="monospace" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>